<div class="columns is-multiline">
    {% for item in list %}{# action items for managers #}
        <div class="column is-2">
            <a href="{{ path('plugin_dishes_item_show', {'id': item.id}) }}">
                <div class="card">
                    <div class="card-image">
                        <figure class="image">
                            {% include '_block/image.html.twig' with {'image': item.previewImage, 'size': '400x400'} %}
                        </figure>
                    </div>
                    <div class="card-content p-2 has-text-centered">
                        {{ item.getTranslatedName(app.locale) }}
                    </div>
                </div>
            </a>
        </div>
    {% endfor %}
</div>
