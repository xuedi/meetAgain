{% extends 'base.html.twig' %}

{% block title %}My Dish Lists{% endblock %}

{% block body %}

    <section class="section">
        <div class="container">

            <nav class="breadcrumb" aria-label="breadcrumbs">
                <ul>
                    <li><a href="{{ path('app_plugin_dishes') }}">Dishes</a></li>
                    <li class="is-active"><a href="#" aria-current="page">My Lists</a></li>
                </ul>
            </nav>

            <div class="level">
                <div class="level-left">
                    <h1 class="title">
                        <span class="icon"><i class="fa-solid fa-list"></i></span>
                        <span>My Dish Lists</span>
                    </h1>
                </div>
                <div class="level-right">
                    <a href="{{ path('plugin_dishes_lists_create') }}" class="button is-link">
                        <span class="icon"><i class="fa-solid fa-plus"></i></span>
                        <span>Create New List</span>
                    </a>
                </div>
            </div>

            {% if myLists is empty %}
                <div class="notification is-info is-light">
                    <p>You haven't created any lists yet.</p>
                    <p class="mt-2">
                        <a href="{{ path('plugin_dishes_lists_create') }}" class="button is-link is-small">Create your first list</a>
                    </p>
                </div>
            {% else %}
                <div class="columns is-multiline">
                    {% for list in myLists %}
                        <div class="column is-4">
                            <div class="card">
                                <div class="card-content">
                                    <p class="title is-5">
                                        {{ list.name }}
                                        {% if list.isPublic %}
                                            <span class="tag is-success is-light ml-2">Public</span>
                                        {% else %}
                                            <span class="tag is-light ml-2">Private</span>
                                        {% endif %}
                                    </p>
                                    {% if list.description %}
                                        <p class="subtitle is-6 has-text-grey">{{ list.description|length > 100 ? list.description|slice(0, 100) ~ '...' : list.description }}</p>
                                    {% endif %}
                                    <p class="is-size-7 has-text-grey">
                                        <span class="icon is-small"><i class="fa-solid fa-utensils"></i></span>
                                        {{ list.dishCount }} dish(es)
                                    </p>
                                </div>
                                <footer class="card-footer">
                                    <a href="{{ path('plugin_dishes_lists_view', {'id': list.id}) }}" class="card-footer-item">
                                        <span class="icon"><i class="fa-solid fa-eye"></i></span>
                                        <span>View</span>
                                    </a>
                                    <a href="{{ path('plugin_dishes_lists_edit', {'id': list.id}) }}" class="card-footer-item">
                                        <span class="icon"><i class="fa-solid fa-pen"></i></span>
                                        <span>Edit</span>
                                    </a>
                                    <a href="{{ path('plugin_dishes_lists_delete', {'id': list.id}) }}" class="card-footer-item has-text-danger"
                                       onclick="return confirm('Are you sure you want to delete this list?')">
                                        <span class="icon"><i class="fa-solid fa-trash"></i></span>
                                        <span>Delete</span>
                                    </a>
                                </footer>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            {% if publicLists is not empty %}
                <hr>
                <h2 class="title is-4">
                    <span class="icon"><i class="fa-solid fa-globe"></i></span>
                    <span>Public Lists from Others</span>
                </h2>

                <div class="columns is-multiline">
                    {% for list in publicLists %}
                        <div class="column is-4">
                            <div class="card">
                                <div class="card-content">
                                    <p class="title is-5">{{ list.name }}</p>
                                    {% if list.description %}
                                        <p class="subtitle is-6 has-text-grey">{{ list.description|length > 100 ? list.description|slice(0, 100) ~ '...' : list.description }}</p>
                                    {% endif %}
                                    <p class="is-size-7 has-text-grey">
                                        <span class="icon is-small"><i class="fa-solid fa-user"></i></span>
                                        {{ get_user_name(list.createdBy) }}
                                        <span class="ml-2">
                                            <span class="icon is-small"><i class="fa-solid fa-utensils"></i></span>
                                            {{ list.dishCount }} dish(es)
                                        </span>
                                    </p>
                                </div>
                                <footer class="card-footer">
                                    <a href="{{ path('plugin_dishes_lists_view', {'id': list.id}) }}" class="card-footer-item">
                                        <span class="icon"><i class="fa-solid fa-eye"></i></span>
                                        <span>View</span>
                                    </a>
                                </footer>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            <div class="mt-5">
                <a href="{{ path('app_plugin_dishes') }}" class="button">
                    <span class="icon"><i class="fa-solid fa-arrow-left"></i></span>
                    <span>Back to Dishes</span>
                </a>
            </div>

        </div>
    </section>

{% endblock %}
