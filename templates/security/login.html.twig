{% extends 'base.html.twig' %}

{% block title %}{{ "page_title_login"|trans }}{% endblock %}

{% block body %}

    <section class="section">
        <div class="container">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

            <form method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input type="hidden" name="_target_path" value="{{ path('app_profile') }}"/>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="field">
                    <label class="label">Email</label>
                    <div class="control">
                        <label>
                            <input
                                    type="email"
                                    name="_username"
                                    id="username"
                                    class="input"
                                    autocomplete="email"
                                    value="{{ last_username }}"
                            >
                        </label>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Password</label>
                    <div class="control">
                        <label>
                            <input
                                    type="password"
                                    name="_password"
                                    id="password"
                                    class="input"
                                    autocomplete="email"
                                    value="{{ last_username }}"
                                    required
                            >
                        </label>
                    </div>
                </div>

                <div class="field is-grouped">
                    <div class="control">
                        <button type="submit" class="button is-link">Login</button>
                    </div>
                </div>
            </form>

            OR REGISTER

        </div>
    </section>


{% endblock %}
