{% extends 'base.html.twig' %}

{% block title %}{{ "page_title_event"|trans }}{% endblock %}

{% block body %}

    <section class="section mt-1 is-hidden-mobile">
        <div class="container">

            <form method="POST" action="{{ path('app_event') }}">
                <div class="select">
                    <select class="eventOnchangeFilter" name="time">
                        <option value="future">Upcoming Events</option>
                        <option value="past">Past Events</option>
                    </select>
                </div>
                <div class="select">
                    <select class="eventOnchangeFilter" name="type">
                        <option value="all">All Events</option>
                        <option value="regular">Regular events</option>
                        <option value="outdoor">Outdoor events</option>
                        <option value="dinner">Dinner events</option>
                    </select>
                </div>
                <button class="button is-link">Search</button>
            </form>

        </div>
    </section>



    {% for item in structuredList %}
        <section class="section py-3 is-hidden-mobile">
            <div class="container">

                <div class="columns">
                    <div class="column is-2">
                        <div class="mt-1">
                            <div class=" is-size-5">{{ item.month }} {{ item.year }}</div>
                        </div>
                    </div>
                    <div class="column is-10">
                        <hr>
                    </div>
                </div>

            </div>
        </section>

        {% for event in item.events %}
            <section class="section py-3">
                <div class="container">
                    <div class="columns">
                        <div class="column is-2 is-hidden-mobile">
                            <div class="mt-1">
                                <p class="has-text-centered is-size-6">{{ event.start|date('D')|upper }}</p>
                                <p class="has-text-centered is-size-3 has-text-weight-bold">{{ event.start|date('d') }}</p>
                            </div>
                        </div>
                        <div class="column is-7">
                            <p class="subtitle is-7 mb-3">{{ event.start|date('d. F Y @ H:i') }}</p>
                            <a class="title is-4 mt-1"
                               href="{{ path('app_event_details', { 'id': event.id }) }}">{{ event.name }}</a>
                            <p class="mt-3">{{ event.description|slice(0, 240) }} ...</p>
                            <p class="mt-3">
                                <span class="tag is-warning">RSVP</span>
                                {% for user in event.rsvp %}
                                    <span class="tag">{{ user.name }}</span>
                                {% endfor %}
                            </p>
                        </div>
                        <div class="column is-3">
                            <figure class="image is-3by2">
                                <img src="{{ asset( event.previewImage.assetPath ) }}" alt="Event Image"/>
                            </figure>
                        </div>
                    </div>
                </div>
            </section>

            <section class="section py-3 is-hidden-tablet">
                <div class="container">
                    <div class="column is-10">
                        <hr>
                    </div>
                </div>
            </section>

        {% endfor %}

    {% endfor %}

{% endblock %}
