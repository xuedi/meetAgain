{% extends 'admin/base.html.twig' %}

{% block content %}

    <div class="container">

        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for host in hosts %}
                <tr>
                    <td>{{ host.name }}</td>
                    <td><a href="{{ path('app_admin_host_edit', {'id': host.id}) }}"><span class="icon"><i class="fa fa-edit"></i></span></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}

