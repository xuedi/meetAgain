{% extends 'admin/base.html.twig' %}

{% block content %}

    <div class="container">

        <div class="columns">
            {% for locationId, locationName in menu_locations %}
                <div class="column">
                    <h2 class="title is-5">{{ locationName }}</h2>
                    <ul>
                        {% for item in items %}
                            {% if locationId == item.location.value %}
                                <li>
                                    <div class="card mb-2">
                                        <div class="card-content p-3">
                                            <div class="content">
                                                <div class="is-pulled-right has-text-right">
                                                    {% set link = path('app_admin_menu_up', {'id': item.id}) %}
                                                    <a href="{{ link }}">
                                                        <span class="icon"><i class="fa fa-angle-up"></i></span>
                                                    </a>
                                                    <br>
                                                    {% set link = path('app_admin_menu_down', {'id': item.id}) %}
                                                    <a href="{{ link }}">
                                                        <span class="icon"><i class="fa fa-angle-down"></i></span>
                                                    </a>
                                                </div>
                                                <p class="title is-6 mb-5">
                                                    {% set link = path('app_admin_menu', {'edit': item.id}) %}
                                                    <a href="{{ link }}" class="is-small is-link is-light">
                                                        <span class="icon"><i class="fas fa-edit"></i></span>
                                                    </a>
                                                    {{ item.translatedName(app.locale) }}
                                                </p>
                                                <p class="subtitle is-6">
                                                    {% set link = '/' ~ app.locale ~ '/' ~ item.slug %}
                                                    Link: <a href="{{ link }}" target="_blank">/{{ item.slug }}</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            {% endfor %}
        </div>

    </div>


    <div class="box mt-6">
        {{ form_start(form) }}
        {{ form_row(form.slug) }} / cms / event
        <br>
        <br>
        <div class="columns">
            <div class="column is-7">
                {{ form_widget(form) }}
                {% if edit is null %}
                    <button class="button is-link">{{ "button_add" | trans }}</button>
                {% else %}
                    <button class="button is-link">{{ "button_save" | trans }}</button>
                {% endif %}

            </div>
            <div class="column is-5">
                <label class="label required">Titles</label>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
