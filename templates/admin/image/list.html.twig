{% extends 'admin/base.html.twig' %}

{% block content %}

    <div class="container">

        <table class="table is-fullwidth">
            <thead>
            <tr>
                <th>CreatedAt</th>
                <th>Uploader</th>
                <th>Size</th>
                <th>Type</th>
                <th>Hash</th>
            </tr>
            </thead>
            <tbody>
            {% for image in images %}
                <tr>
                    <td>{{ image.createdAt | date('Y-m-d') }}</td>
                    <td>{{ image.uploader.email }}</td>
                    <td>{{ image.size | format_bytes }}</td>
                    <td>{{ image.mimeType }}</td>
                    <td>{{ image.hash }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}

