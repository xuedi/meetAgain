{% for name in newBlocks %}
    <a class="toggleTrigger" data-id="new-block-{{ name }}" href="#">
        <button class="button">
            <span class="icon"><i class="fa fa-plus"></i></span>
            <span>{{ ("block_" ~ name) | lower | trans }}</span>
        </button>
    </a>
{% endfor %}

<br>
<br>


{% for name in newBlocks %}
    <article class="message is-success is-hidden" id="new-block-{{ name }}">
        <form method="post" action="{{ path('app_admin_cms_add_block', {'id': cms.id}) }}">
        <input type="hidden" name="editLocale" value="{{ editLocale }}"/>
        <input type="hidden" name="blockType" value="{{ name }}"/>
        <div class="message-header">
            <p>Add new {{ ("block_" ~ name) | lower | trans }} block</p>
            <button class="delete toggleTrigger" data-id="new-block-{{ name }}" aria-label="delete"></button>
        </div>
        <div class="message-body">
            <p>
                {% include 'admin/cms/blocks/' ~ name ~ '.html.twig' %}
            </p>
            <div class="has-text-right">
                <button class="button">{{ "button_add" | trans }}</button>
            </div>
        </div>
        </form>
    </article>
{% endfor %}

