{% extends 'base.html.twig' %}

{% block title %}{{ "page_title_admin"|trans }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href='/stylesheet/jstable.min.css'/>
    <link rel="stylesheet" href='/stylesheet/flatpickr-bulma.min.css'/>
{% endblock %}

{% block body %}

    <section class="section">
        <div class="container">
            <div class="columns">
                <div class="column is-2">
                    {% include 'admin/base_navbar.html.twig' %}
                </div>
                <div class="column is-10">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
    </section>

    <script src='/javascript/jstable.min.js'></script>
    <script>
        let myTable = new JSTable("#filteredTable", {
            sortable: true,
            searchable: true,
            perPage: 15,
            perPageSelect: [
                5, 10, 15, 25, 50, 100,
            ]
        });
    </script>

    <script src='/javascript/flatpickr.min.js'></script>
    {% if app.request.locale != 'en' %}
    <script src='/javascript/flatpickr-l10n/{{ app.request.locale }}.js'></script>
    {% endif %}
    <script>
        document.querySelectorAll('.flatpickr-field').forEach((el) => {
            flatpickr(el, {
                wrap: true,
                enableTime: true,
                dateFormat: "Y-m-d H:i",
                time_24hr: true,
                locale: "{{ app.request.locale }}"
            });
        });
    </script>

{% endblock %}
