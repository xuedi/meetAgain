{% extends 'admin/base.html.twig' %}

{% block content %}

    <div class="container">

        <div class="content">
            <h1 class="title">Email Templates</h1>
            <p>
                Configure email templates sent by the website. Use <code>{{ '{{' }}variable{{ '}}' }}</code> placeholders
                in subject and body fields. Click edit to customize a template.
            </p>
        </div>

        {% for name,email in emails %}
            <div class="content has-background-grey-lighter p-3 mt-6 is-large is-flex is-justify-content-space-between is-align-items-center">
                <span>{{ name | lower | trans }}</span>
                {% if templatesByMockKey[name] is defined %}
                    <a href="{{ path('app_admin_email_edit', {id: templatesByMockKey[name].id}) }}" class="button is-small is-info">
                        Edit
                    </a>
                {% endif %}
            </div>
            <div class="columns">
                <div class="column is-7">
                    <div class="box">
                        <p>Subject: <b>{{ email.subject }}</b></p>
                        <br>
                        <p>
                            {% include email.template with email.context %}
                        </p>
                    </div>
                </div>
                <div class="column">
                    <table class="table is-narrow is-fullwidth">
                        {% for key,value in email.context %}
                            <tr>
                                <th>{{ key }}</th>
                                <td>{% if value is iterable %}{{ value|json_encode }}{% else %}{{ value }}{% endif %}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        {% endfor %}

    </div>

{% endblock %}
