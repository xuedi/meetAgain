{% extends 'admin/base.html.twig' %}

{% block content %}

    <div class="container">

        <h1 class="title is-5">Symfony commands</h1>
        <table class="table">
            <tbody>
            {% for command in commands %}
                <tr>
                    <td>{{ command.value }}</td>
                    <td><a href="{{ path('app_admin_command_execute', {'command': command.name}) }}" class="button is-link is-small">Run</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}

