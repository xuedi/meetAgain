{% extends 'admin/base.html.twig' %}

{% block content %}

    <div class="container">

        <div class="columns">
            <div class="column is-6">

                <h1 class="title is-5">Website settings</h1>
                {{ form_start(form) }}
                {{ form_row(form.url) }}
                {{ form_row(form.host) }}
                <div class="columns mb-0">
                    <div class="column">
                        {{ form_row(form.senderName) }}
                    </div>
                    <div class="column">
                        {{ form_row(form.senderEmail) }}
                    </div>
                </div>
                {{ form_row(form.systemUser) }}
                {{ form_row(form.dateFormat) }}

                <button class="button is-link">{{ "button_save" | trans }}</button>
                {{ form_end(form) }}

            </div>
            <div class="column is-1"></div>
            <div class="column is-5 content">

                <h1 class="title is-5">On/Off settings</h1>
                <table class="table is-fullwidth">
                    <tbody>
                    {% for item in config %}
                        <tr>
                            <td>{{ ("config_option_" ~ item.name)|trans }}</td>
                            <td>
                                {% if item.isBoolean %}

                                    {% include '_block/toggle.html.twig' with {
                                        'link': path('app_admin_system_boolean', {'name': item.name}),
                                        'status': item.getBoolean
                                    } %}

                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>

        <hr>

        <h1 class="title is-5">Theme Colors</h1>
        <p class="subtitle is-6 has-text-grey">Customize the site's color scheme to match your brand. The text grey colors are optimized for WCAG AA accessibility compliance.</p>

        {{ form_start(colorsForm) }}
        <div class="columns is-multiline">
            {% include 'admin/system/_color_picker.html.twig' with {field: colorsForm.color_primary, help: 'Main buttons and highlights'} %}
            {% include 'admin/system/_color_picker.html.twig' with {field: colorsForm.color_link, help: 'Links and clickable elements'} %}
            {% include 'admin/system/_color_picker.html.twig' with {field: colorsForm.color_info, help: 'Information messages'} %}
            {% include 'admin/system/_color_picker.html.twig' with {field: colorsForm.color_success, help: 'Success notifications'} %}
            {% include 'admin/system/_color_picker.html.twig' with {field: colorsForm.color_warning, help: 'Warning alerts', light_text: false} %}
            {% include 'admin/system/_color_picker.html.twig' with {field: colorsForm.color_danger, help: 'Errors and delete actions'} %}
            {% include 'admin/system/_color_picker.html.twig' with {field: colorsForm.color_text_grey, help: 'Secondary text content', text_preview: true} %}
            {% include 'admin/system/_color_picker.html.twig' with {field: colorsForm.color_text_grey_light, help: 'Subtle hints and metadata', text_preview: true} %}
        </div>
        <button class="button is-link">{{ "button_save" | trans }}</button>
        {{ form_end(colorsForm) }}

    </div>

{% endblock %}

