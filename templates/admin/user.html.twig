{% extends 'admin/base.html.twig' %}

{% block title %}Admin - Users{% endblock %}

{% block content %}

    <div class="container">

        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>eMail</th>
                <th>Roles</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <th>{{ user.name }}</th>
                    <th>{{ user.email }}</th>
                    <th>{{ user.roles|join(' | ') }}</th>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}

