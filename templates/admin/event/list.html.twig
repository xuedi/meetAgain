{% extends 'admin/base.html.twig' %}

{% block content %}

    <div class="container">

        <table id="filteredTable" class="table is-fullwidth">
            <thead>
            <tr>
                <th>CreatedBy</th>
                <th>Start date</th>
                <th>Stop date</th>
                <th>Recurring</th>
                <th>Location</th>
                <th>Rsvp</th>
                <th>Type</th>
                <th><a href="{{ path('app_admin_event_add') }}"><span class="icon"><i class="fa fa-add"></i></span></a></th>
            </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr class="{% if event.id == nextEvent %}has-background-warning-light{% endif %}">
                    <td>{% if event.initial %}{{ event.user.name }}{% else %}auto{% endif %}</td>
                    <td>{{ event.start|date('Y-m-d') }}</td>
                    <td>{{ event.stop|date('Y-m-d') }}</td>
                    <td>{% if event.recurringRule is null %}{{ 'No'|trans }}{% else %}{{ event.recurringRule.name|trans }}{% endif %}</td>
                    <td>{{ event.location.name }}</td>
                    <td>{{ event.rsvp|length }}</td>
                    <td>{{ event.type.name }}</td>
                    <td>
                        <a href="{{ path('app_admin_event_edit', {'id': event.id}) }}">
                            <span class="icon"><i class="fa fa-edit"></i></span>
                        </a>
                        {% if event.featured %}
                            <span class="icon has-text-warning"><i class="fa fa-star"></i></span>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}

