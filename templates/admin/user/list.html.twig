{% extends 'admin/base.html.twig' %}

{% block content %}

    <div class="container">

        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>eMail</th>
                <th></th>
                <th>Roles</th>
                <th>CreatedAt</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.name }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.locale }}</td>
                    <td>{{ user.roles|join(' | ') }}</td>
                    <td>{{ user.createdAt|date('Y-m-d') }}</td>
                    <td><a href="{{ path('app_admin_user_edit', {'id': user.id}) }}"><span class="icon"><i class="fa fa-edit"></i></span></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}

