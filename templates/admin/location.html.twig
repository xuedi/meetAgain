{% extends 'admin/base.html.twig' %}

{% block title %}Admin - Locations{% endblock %}

{% block content %}

    <div class="container">

        <table class="table">
            <thead>
            <tr>
                <th>id</th>
                <th>createBy</th>
                <th>name</th>
                <th>description</th>
                <th>street</th>
                <th>postcode</th>
                <th>city</th>
            </tr>
            </thead>
            <tbody>
            {% for location in locations %}
                <tr>
                    <th>{{ location.id }}</th>
                    <th>{{ location.user.name }}</th>
                    <th>{{ location.name }}</th>
                    <th>{{ location.description|slice(0, 20) }}</th>
                    <th>{{ location.street }}</th>
                    <th>{{ location.postcode }}</th>
                    <th>{{ location.city }}</th>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}

