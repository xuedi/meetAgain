{% extends 'base.html.twig' %}

{% block title %}{{ "page_title_profile"|trans }}{% endblock %}

{% block body %}

    <section class="section is-hidden-touch">
        <div class="container">

            <div class="columns">
                <div class="column is-3">

                    <div class="panel is-shadowless">

                        <div class="panel-block">
                            <h1 class="title is-5">Messages</h1>
                        </div>

                        {% for conversation in conversations %}
                            <!-- TODO: is-active -->
                            <a class="panel-block is-block"
                                    {% if conversationsId == conversation.user.id %} style="background-color: aliceblue;" {% endif %}
                               href="{{ path('app_profile_messages', {'id': conversation.user.id}) }}"
                            >
                                <div class="level">
                                    <div class="level-left">
                                        <div class="level-item">
                                            {% include '_block/image.html.twig' with {'image': conversation.user.image, 'size': '50x50'} %}
                                        </div>
                                        <div class="level-item">
                                            <div class="is-block has-text-left">
                                                <strong>{{ conversation.user.name }}</strong><br/>
                                                <small class="is-small">{{ conversation.lastMessage | time_diff }}</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="level-right">
                                        <div class="content">
                                            {% if conversation.unread > 0 %}
                                                <span class="tag has-background-danger-light">{{ conversation.unread }}</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </a>
                        {% endfor %}

                    </div>
                </div>


                <div class="column is-1"></div>


                <div class="column is-8">

                    {% if messages is null %}
                        <h1 class="title is-6">Hello,</h1>
                        <p class="mb-2">
                            this is your message overview. On the left are the people you exchanged messages with.
                        </p>
                        <p class="mb-2">
                            You can only message to people you are friends with, or people who allow to be messages from
                            everyone
                        </p>
                        <p class="mb-2">
                            have a look at the members page, on the detail view of each member you have a message buttun
                            until xuedi
                            implements a kind addressbook here
                        </p>
                    {% else %}
                        {% for message in messages %}
                            {% if user.id == message.sender.id %}
                                <div class="level is-block">
                                    <div class="level-right">
                                        <div class="level-item">
                                            <div class="box">
                                                <small class="is-small">{{ message.createdAt | time_diff }}</small><br>
                                                <span class="breakText">{{ message.content }}</span>
                                            </div>
                                        </div>
                                        <div class="level-item">
                                            {% include '_block/image.html.twig' with {'image': message.sender.image, 'size': '50x50'} %}
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div class="level">
                                    <div class="level-left">
                                        <div class="level-item">
                                            {% include '_block/image.html.twig' with {'image': message.sender.image, 'size': '50x50'} %}
                                        </div>
                                        <div class="level-item">
                                            <div class="box">
                                                <small class="is-small">{{ message.createdAt | time_diff }}</small><br>
                                                <span class="breakText">{{ message.content }}</span>
                                            </div>
                                        </div>
                                        {% if message.wasRead == false %}
                                            <div class="level-item">
                                            <span class="panel-icon has-text-danger">
                                                <i class="fas fa-circle" aria-hidden="true"></i>
                                            </span>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                        <hr>
                        {{ form_start(form) }}
                        <div class="level">
                            <div class="level-item">
                                <input class="input" type="text" name="{{ field_name(form.comment) }}"
                                       placeholder="Message"/>
                            </div>
                            <div class="level-right">
                                <button class="button is-link ml-2">{{ "button_send" | trans }}</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    {% endif %}
                </div>
            </div>

        </div>
    </section>

    <section class="section is-hidden-desktop">
        <h1 class="title is-5">Messages</h1>
        <div class="tabs is-boxed is-fullwidth is-small">
            <ul>
                {% for conversation in conversations %}
                    <li class="{% if conversationsId == conversation.user.id %}is-active{% endif %}">
                        <a href="{{ path('app_profile_messages', {'id': conversation.user.id}) }}">
                            <span class="ml-2">
                                {{ conversation.user.name }}<br>
                                <small>{{ conversation.lastMessage | time_diff }}</small>
                            </span>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>

        {% if messages is null %}
            <h1 class="title is-6">Hello,</h1>
            <p class="mb-2">
                this is your message overview. On the left are the people you exchanged messages with.
            </p>
            <p class="mb-2">
                You can only message to people you are friends with, or people who allow to be messages from
                everyone
            </p>
            <p class="mb-2">
                have a look at the members page, on the detail view of each member you have a message buttun
                until xuedi
                implements a kind addressbook here
            </p>
        {% else %}
            {% for message in messages %}
                {% if user.id == message.sender.id %}
                    <div class="box has-text-right">
                        <strong>{{ message.sender.name }}</strong><small class="ml-2">{{ message.createdAt | time_diff }}</small><br>
                        <span class="breakText">{{ message.content }}</span>
                    </div>
                {% else %}
                    <div class="box">
                        <strong>{{ message.sender.name }}</strong><small class="ml-2">{{ message.createdAt | time_diff }}</small><br>
                        <span class="breakText">{{ message.content }}</span>
                    </div>
                {% endif %}
            {% endfor %}
            <hr>
            {{ form_start(form) }}
            <div class="field has-addons">
                <div class="control">
                    <input class="input" type="text" name="{{ field_name(form.comment) }}" placeholder="Message" />
                </div>
                <div class="control">
                    <button class="button is-link ml-2">{{ "button_send" | trans }}</button>
                </div>
            </div>
            {{ form_end(form) }}
        {% endif %}

    </section>

{% endblock %}
