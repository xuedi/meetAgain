<a role="button" class="navbar-burger" data-target="navBurgenMenu" aria-label="menu" aria-expanded="false">
    <span aria-hidden="true"></span>
    <span aria-hidden="true"></span>
    <span aria-hidden="true"></span>
</a>

<div id="navBurgenMenu" class="navbar-menu is-hidden-desktop">

    <div class="navbar-start">
        <a class="navbar-item" href="{{ path('app_default') }}">{{ "menu_default" | trans }}</a>
        <a class="navbar-item" href="/{{ app.locale }}/about">{{ "menu_about" | trans }}</a>
        <a class="navbar-item" href="{{ path('app_event') }}">{{ "menu_events" | trans }}</a>
        <a class="navbar-item" href="{{ path('app_member') }}">{{ "menu_members" | trans }}</a>

        {% if is_granted('ROLE_USER') %}
            <hr class="dropdown-divider"/>
            <div class="navbar-item">
                <aside class="menu">
                    <p class="menu-label">Loggedin: {{ app.user.name }}</p>
                    <ul class="menu-list pl-3">
                        <li><a href="{{ path('app_profile_messages') }}">{{ "menu_profile_messages" | trans }}</a></li>
                    </ul>
                </aside>
            </div>
        {% endif %}


        <hr class="dropdown-divider"/>
        {% if is_granted('ROLE_USER') %}
            <a class="navbar-item" href="/logout">
                <span class="icon mr-2"><i class="fa fa-sign-out"></i></span>
                {{ "menu_profile_logout" | trans }}
            </a>
        {% else %}
            <a class="navbar-item" href="{{ path('app_login') }}">
                <span class="icon mr-2"><i class="fa fa-sign-in"></i></span>
                {{ "menu_login" | trans }}
            </a>
        {% endif %}

        {% if app.request.attributes.get('_route_params') is not null %}
            <hr class="dropdown-divider"/>
            <div class="navbar-item">
                {% for enabledLocale in app.enabled_locales %}
                    {% if enabledLocale != app.request.locale %}
                        {% set attributes = app.request.attributes.get('_route_params') | merge({'_locale': enabledLocale}) %}
                        {% set link = path(app.request.attributes.get('_route'),  attributes) %}
                        <a class="button is-small mr-2" href="{{ link }}">
                            <figure class="image is-32x32 mt-3">
                                <img class="is-flag" src="{{ asset('images/flags/' ~ enabledLocale ~ '.png') }}"
                                     alt="Locale flag"/>
                            </figure>
                        </a>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}

    </div>

</div>