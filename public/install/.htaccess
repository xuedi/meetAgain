# Protect templates directory from direct access
<FilesMatch "\.html$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# Deny access to the templates directory
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^templates/ - [F,L]
</IfModule>
